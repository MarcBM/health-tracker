# ==============================================
# Health Tracker Dashboard - Environment Configuration
# ==============================================
# Copy this file to .env and update the values for your environment

# ==============================================
# SECURITY SETTINGS (CRITICAL - CHANGE IN PRODUCTION!)
# ==============================================
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production-minimum-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
DATABASE_URL=sqlite:///./health_tracker.db
# For production with persistent storage on Fly.io:
# DATABASE_URL=sqlite:///data/health_tracker.db

# ==============================================
# APPLICATION SETTINGS
# ==============================================
APP_NAME=Health Tracker Dashboard
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true

# ==============================================
# INITIAL ADMIN USER (Primary User Setup)
# ==============================================
ADMIN_USERNAME=marc
ADMIN_EMAIL=marc@marcbm.com.au
ADMIN_PASSWORD=changeme123
ADMIN_FULL_NAME=Marc

# ==============================================
# CORS AND SECURITY
# ==============================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:8000,http://127.0.0.1:8000,https://health.marcbm.com.au

# Comma-separated list of allowed hosts
ALLOWED_HOSTS=localhost,127.0.0.1,health.marcbm.com.au

# ==============================================
# SESSION AND AUTHENTICATION
# ==============================================
# Session cookie settings
SESSION_COOKIE_NAME=health_tracker_session
SESSION_COOKIE_SECURE=false  # Set to true in production with HTTPS
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=lax

# Password requirements
MIN_PASSWORD_LENGTH=8
REQUIRE_SPECIAL_CHARS=false

# ==============================================
# APPLICATION FEATURES
# ==============================================
# Health metrics configuration
DEFAULT_DAILY_CALORIE_GOAL=2000
DEFAULT_DAILY_STEP_GOAL=10000
DEFAULT_EXERCISE_GOAL_MINUTES=30

# Data retention (days)
DATA_RETENTION_DAYS=365

# ==============================================
# LOGGING
# ==============================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ==============================================
# DEVELOPMENT SETTINGS
# ==============================================
# Enable/disable features for development
ENABLE_SWAGGER_UI=true
ENABLE_REDOC=true
ENABLE_DEBUG_TOOLBAR=false

# ==============================================
# PRODUCTION DEPLOYMENT (FLY.IO)
# ==============================================
# These are set automatically by Fly.io, but can be overridden
# FLY_APP_NAME=health-tracker
# FLY_REGION=syd
# PORT=8000

# Production database path (when using Fly.io volumes)
# DATABASE_URL=sqlite:///data/health_tracker.db

# Production security settings
# SECRET_KEY=<generate-a-secure-random-key>
# DEBUG=false
# ENVIRONMENT=production
# SESSION_COOKIE_SECURE=true 